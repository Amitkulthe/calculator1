<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/calculatorScreen"
        android:gravity="center|right"
        android:layout_margin="10dp"
    />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/del"
                android:textSize="25sp"
                android:text="DEL"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/clearscreen"
                android:textSize="25sp"
                android:text="CE"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/n7"
                android:textSize="25sp"
                android:text="7"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/n8"
                android:textSize="25sp"
                android:text="8"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/n9"
                android:textSize="25sp"
                android:text="9"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/divition"
                android:textSize="25sp"
                android:text="/"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/n4"
            android:textSize="25sp"
            android:text="4"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/n5"
            android:textSize="25sp"
            android:text="5"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/n6"
            android:textSize="25sp"
            android:text="6"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/multiplication"
            android:textSize="25sp"
            android:text="*"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/n1"
            android:textSize="25sp"
            android:text="1"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/n2"
            android:textSize="25sp"
            android:text="2"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/n3"
            android:textSize="25sp"
            android:text="3"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/subtraction"
            android:textSize="25sp"
            android:text="-"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dot"
            android:textSize="25sp"
            android:text="."
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/n0"
            android:textSize="25sp"
            android:text="0"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/equals"
            android:textSize="25sp"
            android:text="="
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/addition"
            android:textSize="25sp"
            android:text="+"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>